@model IEnumerable<Library.Models.Book>

@{
    ViewData["Title"] = "Index";
    string vertikaalStreepje = " | ";
}

<h1>Index</h1>

    @if (User.IsInRole("ContentAdmin"))
    {
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.FirstName)
                    @Html.DisplayFor(modelItem => item.Author.LastName)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
             @if (User.IsInRole("ContentAdmin"))
             {
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> @vertikaalStreepje
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> @vertikaalStreepje
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
             }
        </tr>
}
    </tbody>
</table>
